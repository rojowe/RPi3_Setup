//DO NOT USE apt-get install arduino ... its old and out of date...instead, extract it from the webpage with 

//download arduino ide from arduino server
cd ~/Downloads
wget https://downloads.arduino.cc/arduino-1.8.10-linuxarm.tar.xz

//extract folder (-x extract, -f creates file with extract name)
tar -x -f arduino-1.8.10-linuxarm.tar.xz

//Install Arduino IDE with installation script
./install.sh

